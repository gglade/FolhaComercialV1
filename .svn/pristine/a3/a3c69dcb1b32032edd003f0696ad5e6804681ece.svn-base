            <p:layoutUnit position="center">
            
                <h1 align="center">Folha de Pagamento Comercial  </h1><br/>
                <div id="box1" align="center">
               <p:graphicImage dir="rtl" id="logo" value="//dot-luv//images//LogoEco.png"  width="640" height="227" />
                </div>
<!--                <h:outputLabel dir="ltr" value="Bem Vindo ao Sistema:  "/>-->
                <h3 align="center">Bem Vindo ao Sistema: <h:outputText value="#{funcionarioBean.login}"/>
                </h3><br/><br/><br/>
                <div id="box1">
			<center>

				Faça o Logout <a href="#{request.contextPath}/j_spring_security_logout">clicando aqui</a>
			</center>
		</div>

