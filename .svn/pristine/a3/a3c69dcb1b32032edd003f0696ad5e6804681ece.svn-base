        <p:submenu label="Cadastros" icon="ui-icon-extlink">  
          
          	<p:menuitem value="Usuário" url="/app/adm/usuario/form_vendafuncionario.jsf"/> 
            <p:menuitem value="Funcionário"  url="/app/publico/funcionario/form_funcionario.jsf"/>  
            <p:menuitem value="Empresa" url="/app/publico/empresa/form_empresa.jsf"/>
            <p:menuitem value="Cargo" url="/app/publico/cargo/form_cargo.jsf"/>  
            <p:menuitem value="Metas de Empresa" url="/app/publico/metaempresa/form_meta.jsf"/>
            <p:menuitem value="Vendas de Funcionario" url="/app/publico/vendafuncionario/form_vendafunc.jsf"/>  
        </p:submenu>
         <p:separator />
                  
         <p:submenu label="Movimentos" icon="ui-icon-extlink">        
         	<p:menuitem value="Folha de Pagamento"  url="/app/publico/folhapagamento/lista_folha.jsf" />
         	<p:menuitem value="Eventos"  url=" " />        
         </p:submenu>
         <p:separator />
         
         <p:submenu label="Listas" icon="ui-icon-extlink">        
         	<p:menuitem value="Funcionário"  url="/app/publico/funcionario/listagem.jsf" />
         	<p:menuitem value="Funcionário Por Empresa"  url="/app/publico/funcionario/listagemporempresa.jsf" />  
         	<p:menuitem value="Empresa"  url="/app/publico/empresa/listagem.jsf" />
         	<p:menuitem value="Meta Empresa"  url="/app/publico/metaempresa/listagem.jsf" />
         	<p:menuitem value="M.E. Por Empresa"  url="/app/publico/metaempresa/lista_me_data.jsf" />    
         	<p:menuitem value="Total de Vendas Por Empresa"  url="/app/publico/vendafuncionario/lista_vf_empresa.jsf" />
         	<p:menuitem value="Total de Vendas Agrupadas"  url="/app/publico/vendafuncionario/lista_vf_empresa_valorgroup.jsf" />
         	<p:menuitem value="Listagem de Usuários" url="/app/adm/usuario/lista_usuarios.jsf"/> 
         </p:submenu>
         
           
    </p:menu>  
            </h:form>
            

 </p:layoutUnit>
